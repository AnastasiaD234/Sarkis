@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>La Sarkis Rzestaurant - Index| @ViewBag.Title</title>
    <meta content="" name="description">
    <meta content="" name="keywords">




    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css" rel="stylesheet">

    @Styles.Render("~/bundles/animate/css")
    @Styles.Render("~/bundles/aos/css")
    @Styles.Render("~/bundles/bootstrap/css")
    @Styles.Render("~/bundles/bootstrap-icons/css")
    @Styles.Render("~/bundles/boxicons/css")
    @Styles.Render("~/bundles/glightbox/css")
    @Styles.Render("~/bundles/swiper/css")
    @Styles.Render("~/bundles/style/css")
    @Styles.Render("~/bundles/meniu/css")
    @Styles.Render("~/bundles/profile/css")
    @Styles.Render("~/bundles/rezervmeniu/css")

</head>
<body>
    @if (TempData["SuccessMessage"] != null)
    {
        <div id="success-message" style="
        position: fixed;
        top: 20%;
        left: 50%;
        transform: translate(-50%, -50%);
        background-color: #d4edda;
        color: #155724;
        border: 1px solid #c3e6cb;
        padding: 15px 25px;
        border-radius: 8px;
        font-size: 16px;
        z-index: 9999;
        box-shadow: 0px 0px 10px rgba(0,0,0,0.2);
        transition: opacity 1s ease-in-out;
    ">
            @TempData["SuccessMessage"]
        </div>

        <script>
        setTimeout(function () {
            var msg = document.getElementById('success-message');
            if (msg) {
                msg.style.opacity = '0';
                setTimeout(function () {
                    msg.remove();
                }, 1000);
            }
        }, 4000); 
        </script>
    }


    @Html.Partial("_Header")
    @RenderBody()
    @Html.Partial("_Footer")


    @Scripts.Render("~/bundle/aos/js")

    @Scripts.Render("~/bundle/glightbox/js")
    @Scripts.Render("~/bundle/isotope-layout/js")
    @Scripts.Render("~/bundle/php-email-from/js")
    @Scripts.Render("~/bundle/swiper/js")


    @Scripts.Render("~/bundle/rezervare/js")
    @Scripts.Render("~/bundle/rezerv/js")


    @Scripts.Render("~/bundle/js/js")

</body>
</html>
 