
@{
    ViewBag.Title = "Comenzi";
}

<section>
    <div class="container">
        <h2>Istoric Comenzi</h2>
        <div class="filters">
            <label for="dateFilter">Filtru după dată:</label>
            <input type="date" id="dateFilter">

            <label for="typeFilter">Filtru după tip:</label>
            <select id="typeFilter">
                <option value="">Toate</option>
                <option value="banchet">Banchet</option>
