
@{
     ViewBag.Title = "Authentification";
     Layout=null;
}

@model Sarkis.Models.AuthViewModel


<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Authentication</title>
     <link rel="stylesheet" href="~/Content/css/authetification_style.css">
     <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
</head>
<body>
     <!--Registre-->

     <div class="container" id="container">
          <!-- REGISTER FORM -->
          <div class="form-container sign-up-container">
               @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @id = "RegisterForm" }))
               {
                    @Html.AntiForgeryToken()
                    <h1>Create Account</h1>

                    <div class="social-container">
                         <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                         <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                         <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                    </div>

                    <span>or use your email for registration</span>

                    <div class="form-group">
                         @Html.TextBoxFor(m => m.RegisterModel.Username, new { @class = "form-control", placeholder = "Username" })
                    </div>
                    <div class="form-group">
                         @Html.TextBoxFor(m => m.RegisterModel.Email, new { @class = "form-control", placeholder = "Email" })
                    </div>
                    <div class="form-group">
                         @Html.PasswordFor(m => m.RegisterModel.Password, new { @class = "form-control", placeholder = "Password" })
                    </div>
                    <div class="form-group">
                         @Html.PasswordFor(m => m.RegisterModel.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm Password" })
                    </div>
                    <div class="form-group">
                         <label>
                              @Html.CheckBoxFor(m => m.RegisterModel.IsAdmin) Sunt admin
                         </label>
                    </div>
                    <button type="submit" class="btn btn-accent">Sign Up</button>

               }
          </div>

          <!-- LOGIN FORM -->
          <div class="form-container sign-in-container">
               @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @id = "LoginForm" }))
               {
                    @Html.AntiForgeryToken()
                    <h1>Sign in</h1>
                    <div class="social-container">
                         <a href="#" class="social"><i class="fab fa-facebook-f"></i></a>
                         <a href="#" class="social"><i class="fab fa-google-plus-g"></i></a>
                         <a href="#" class="social"><i class="fab fa-linkedin-in"></i></a>
                    </div>

                    <span>or use your account</span>

                    @Html.TextBoxFor(m => m.LoginModel.Credential, new { @class = "form-control", placeholder = "Email or Username" })
                    @Html.PasswordFor(m => m.LoginModel.Password, new { @class = "form-control", placeholder = "Password" })

                    <a href="#">Forgot your password?</a>
                    <button>Sign In</button>
               }
          </div>

          <!-- OVERLAY PANELS -->
          <div class="overlay-container">
               <div class="overlay">
                    <div class="overlay-panel overlay-left">
                         <h1>Welcome Back!</h1>
                         <p>To keep connected with us please login with your personal info</p>
                         <button class="ghost" id="signIn">Sign In</button>
                    </div>
                    <div class="overlay-panel overlay-right">
                         <h1>Hello, Friend!</h1>
                         <p>Enter your personal details and start journey with us</p>
                         <button class="ghost" id="signUp">Sign Up</button>
                    </div>
               </div>
          </div>
     </div>
     <script src="~/Scripts/authetification_style.js"></script>
     <link rel="stylesheet" href="~/Content/css/authetification_style.css">
</body>
</html>